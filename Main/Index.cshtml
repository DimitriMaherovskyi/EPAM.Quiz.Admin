<div ng-app="QuizApp">
    <md-toolbar md-tall layout="row">
        <div class="md-toolbar-tools">
            <md-button class="md-hue-1 md-button md-primary md-raised md-ink-ripple" style="text-decoration:solid; font-size:20px" href="">
                <span class="ng-scope">
                Students
                </span>
            </md-button>
            <md-button class="md-hue-1 md-button md-raised md-primary md-ink-ripple" style="text-decoration:solid; font-size:20px" href="">
             Quizzes
            </md-button>
            <span flex class="flex">
            </span>
            <md-button class="md-hue-1 md-button md-raised md-primary md-ink-ripple" style="text-decoration:solid; font-size:20px" href="">
            Full Name
            </md-button>
        </div>
    </md-toolbar>
    <md-content md-theme="docs-dark" layout-padding flex ng-controller="TableController">
        <md-input-container class="md-block" md-colors="{color: 'red-A100', border-color: 'primary-600'}" flex-gt-sm>
            <label>Search</label>
            <input type="text" ng-model="search">
        </md-input-container>
        <md-table headers="headers" content="content" sortable="sortable" filters="search" custom-class="custom" count="count"></md-table>
    </md-content>
    <div id="md-table-template" ng-hide="true">
        <table class="md-table">
            <thead>
                <tr class="md-table-headers-row">
                    <th ng-repeat="h in headers" class="md-table-header"><a href="#" ng-click="reverse=!reverse;order(h.field,reverse)">{{h.name}}</a></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="c in content | filter:filters | startFrom:tablePage*count | limitTo: count" class="md-table-content-row">
                    <td ng-repeat="h in headers" ng-class="customClass[h.field]" class="md-table-content">{{c[h.field]}}</td>
                </tr>
            </tbody>
        </table>
        <div layout="row" class="md-table-footer">
            <span class="md-table-count-info">Rows per page : <a href="#" ng-click="goToPage(0); count=10">10</a>,<a href="#" ng-click="goToPage(0); count=25">25</a>,<a href="#" ng-click="goToPage(0); count=50">50</a>,<a href="#" ng-click="goToPage(0); count=100">100</a>(current is {{count}})</span><span flex="flex"></span><span ng-show="nbOfPages() &gt; 1">
                <md-button ng-disabled="tablePage==0" ng-click="tablePage=tablePage-1" aria-label="Previous Page" class="md-primary md-hue-2"></md-button><a href="#" ng-repeat="i in getNumber(nbOfPages()) track by $index">
                    <md-button ng-click="goToPage($index)" class="md-primary md-hue-2 md-table-footer-item"><span ng-class="{ 'md-table-active-page': tablePage==$index}">{{$index+1}}</span></md-button>
                </a>
                <md-button ng-disabled="tablePage==nbOfPages()-1" ng-click="tablePage=tablePage+1" aria-label="Next Page" class="md-primary md-hue-2"></md-button>
            </span>
        </div>
    </div>
</div>
@section FootScripts
{
    <script src="~/Scripts/app/pages/quiz/quiz.module.js"></script>
    <script src="~/Scripts/app/pages/quiz/quiz.service.js"></script>
    <script src="~/Scripts/app/pages/quiz/quiz.controller.js"></script>
    <script src="~/Scripts/app/pages/quiz/quiz.tableController.js"></script>
}